<div>
  <div>
    <h1>
      Package #<%= @the_package.id %> details
    </h1>

    <div>
      <div>
        <a href="/packages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_package/<%= @the_package.id %>">
          Delete package
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Description
      </dt>
      <dd>
        <%= @the_package.description %>
      </dd>

      <dt>
        Estimated arrival
      </dt>
      <dd>
        <%= @the_package.estimated_arrival %>
      </dd>

      <dt>
        Details
      </dt>
      <dd>
        <%= @the_package.details %>
      </dd>

      <dt>
        Tracking
      </dt>
      <dd>
        <%= @the_package.tracking %>
      </dd>

      <dt>
        Recieved
      </dt>
      <dd>
        <%= @the_package.recieved %>
      </dd>

      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_package.owner_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_package.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit package
    </h2>

    <form action="/modify_package/<%= @the_package.id %>"  method="post" >
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description" value="<%= @the_package.description %>">
      </div>

      <div>
        <label for="estimated_arrival_box">
          Estimated arrival
        </label>

        <input type="date" id="estimated_arrival_box" name="query_estimated_arrival" value="<%= @the_package.estimated_arrival %>">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <input type="text" id="details_box" name="query_details" value="<%= @the_package.details %>">
      </div>

      <div>
        <label for="tracking_box">
          Tracking
        </label>

        <input type="text" id="tracking_box" name="query_tracking" value="<%= @the_package.tracking %>">
      </div>

      <div>
        <input type="checkbox" id="recieved_box" name="query_recieved" value="1" <%= "checked" if @the_package.recieved %>>

        <label for="recieved_box">
            Recieved
        </label>
      </div>

      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id" value="<%= @the_package.owner_id %>">
      </div>

      <button>
        Update package
      </button>
    </form>
  </div>
</div>

<hr>
