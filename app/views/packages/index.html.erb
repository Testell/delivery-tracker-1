<div>
  <div>
    <h1>
      Delivery Tracker
    </h1>
    <p>
      Know if something gets lost in the mail
    </p>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Expecting a package?
    </h2>

    <form action="/insert_package" method="post">
      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="estimated_arrival_box">
          Suppose to arrive on
        </label>

        <input type="date" id="estimated_arrival_box" name="query_estimated_arrival">
      </div>

      <div>
        <label for="details_box">
          Details
        </label>

        <input type="text" id="details_box" name="query_details">
      </div>
      <!--<div>-->
        <!--<input type="checkbox" id="recieved_box" name="query_recieved" value="1">-->

        <!--<label for="recieved_box">Recieved</label>-->
      <!--</div>-->
      <div>
        <label for="owner_id_box">
          Owner
        </label>

        <input type="text" id="owner_id_box" name="query_owner_id">
      </div>

      <button>
        Create package
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Description
        </th>

        <th>
          Estimated arrival
        </th>

        <th>
          Details
        </th>

        <th>
          Tracking
        </th>

        <th>
          Recieved
        </th>

        <th>
          Owner
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_packages.each do |a_package| %>
      <tr>
        <td>
          <%= a_package.id %>
        </td>

        <td>
          <%= a_package.description %>
        </td>

        <td>
          <%= a_package.estimated_arrival %>
        </td>

        <td>
          <%= a_package.details %>
        </td>

        <td>
          <%= a_package.tracking %>
        </td>

        <td>
          <%= a_package.recieved %>
        </td>

        <td>
          <%= a_package.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_package.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_package.updated_at) %> ago
        </td>

        <td>
          <a href="/packages/<%= a_package.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
